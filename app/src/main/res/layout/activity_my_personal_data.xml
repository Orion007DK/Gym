<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.MyPersonalDataActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/FontFamilyTitle"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:text="Mój profil"
                android:textAlignment="center"
                android:textSize="@dimen/textSizeTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Imię:"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name"
                    android:paddingLeft="10dp"
                    android:inputType="textPersonName" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <TextView
                    android:id="@+id/textViewSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nazwisko:"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Surname"
                    android:paddingLeft="10dp"
                    android:inputType="textPersonName" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adres email:"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="email"
                    android:paddingLeft="10dp"
                    android:inputType="textWebEmailAddress" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <TextView
                    android:id="@+id/textViewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Numer telefonu:"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="eq. 764237862"
                    android:paddingLeft="10dp"
                    android:inputType="numberDecimal" />

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>


                <TextView
                    android:id="@+id/textViewChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zmień hasło"
                    android:textColor="#0D29DD"
                    android:textAlignment="textStart"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInvisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <com.bartbergmans.gradientbutton.views.GradientButton
                        android:id="@+id/buttonSaveChanges"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Zapisz zmiany"
                        app:circular="false"
                        app:end_color="@color/buttonEndColor"
                        android:textColor="@color/buttonTextColor"
                        app:filled="true"
                        android:layout_margin="10dp"
                        app:orientation="top_bottom"
                        app:start_color="@color/buttonStartColor"
                        app:stroke="3dp" />
<!--
                    <Button
                        android:id="@+id/buttonSaveChanges"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="Zapisz zmiany" />

                        -->
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
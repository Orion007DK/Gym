<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.PasswordChangeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/FontFamilyTitle"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:text="Zmiana hasła"
                android:textAlignment="center"
                android:textSize="@dimen/textSizeTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/textViewPreviousPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stare hasło"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextPreviousPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="old password"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_password"/>

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <TextView
                    android:id="@+id/textViewNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nowe hasło:"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="new password"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_password"/>

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <TextView
                    android:id="@+id/textViewRepeatedNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Powtórz nowe hasło:"
                    android:textSize="20dp" />

                <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:borderColor="@color/colorPrimary"
                    app:borderWidth="2dp"
                    app:cornerRadius="8dp"
                    android:padding="16dp">

                <EditText
                    android:id="@+id/editTextRepeatedNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="email"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/ic_password"/>

                </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewInvisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <com.bartbergmans.gradientbutton.views.GradientButton
                        android:id="@+id/buttonChangePassword"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Zmień hasło"
                        app:circular="false"
                        app:end_color="@color/buttonEndColor"
                        android:textColor="@color/buttonTextColor"
                        app:filled="true"
                        android:layout_margin="10dp"
                        app:orientation="top_bottom"
                        app:start_color="@color/buttonStartColor"
                        app:stroke="3dp" />
             <!--
                    <Button
                        android:id="@+id/buttonChangePassword"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Zapisz zmiany" />

                        -->


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
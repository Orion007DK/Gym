                    android:id="@+id/buttonTrainingHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historia trening贸w"
                    app:circular="false"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/trainings_history_icon"
                    style="@style/GradientButtonLeftToRightStyle"
                    app:stroke="3dp" />
                <!--
                <Button
                    android:id="@+id/buttonTrainingHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historia trening贸w"
                    android:fontFamily="@string/MainPageButtonFontFamily"
                    android:textSize="@dimen/textSizeButton"/>
-->
                <com.bartbergmans.gradientbutton.views.GradientButton
                    android:id="@+id/buttonStatisticsOnDiagrams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Statystyki na wykresach"
                    app:circular="false"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/charts_icon"
                    style="@style/GradientButtonLeftToRightStyle"
                    app:stroke="3dp" />
